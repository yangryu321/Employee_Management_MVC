@model List<UserClaimsViewModel>

@{ 
    ViewData["Title"] = "UserClaimsViewModel page";
    @*var userId = ViewData["UserId"];*@
}


<form method="post">
    <div class="card">
        <div class="card-header">
            <p>Manage User Claims</p>
        </div>
        <div class="card-body">
       @for (int i=0;i<Model.Count;i++)
       {
                <input hidden asp-for="@Model[i].ClaimType"/>
                <div>
                    <input asp-for="@Model[i].IsSelected"/>
                    <label asp-for="@Model[i].IsSelected">@Model[i].ClaimType</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit">Update</button>
            <a asp-controller="Administration" asp-action="ManageClaims" >Cancel</a>
        </div>
    </div>
</form>