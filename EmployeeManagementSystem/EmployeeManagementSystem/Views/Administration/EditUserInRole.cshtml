@model List<UserRoleViewModel>

@{
    ViewBag.Titlte = "EditUserInRole page";
    var RoleId = ViewBag.RoleId;
}


<form method="post" asp-action="EditUserInRole" asp-controller="Administration">

    <div class="card">
        <div class="card-header">
            <h1>Add or remove users from this role</h1>
        </div>

        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <input hidden asp-for="@Model[i].UserName" />
                <input hidden asp-for="@Model[i].UserId" />
                <div>
                    <input asp-for="@Model[i].IsSelected" />
                    <label>@Model[i].UserName</label>
                </div>
            }
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary" asp-action="EditUserInRole" asp-controller="Administration" asp-route-roleId="@RoleId">Update</button>
            <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>

