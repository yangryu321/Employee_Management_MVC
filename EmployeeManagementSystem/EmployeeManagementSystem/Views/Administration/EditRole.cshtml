@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role page";
}

<h1>Edit Role</h1>

<form method="post" asp-controller="Administration" asp-action="EditRole">
    <div class="mt-3">
        <label asp-for="RoleId"></label>
        <input asp-for="RoleId" readonly class="form-control"/>
    </div>

    <div class="mt-3">
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" class="form-control"/>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary" >Update</button>
        <a class="btn btn-primary" asp-action="ListRoles">Cancel</a>
    </div>


    <div class="card mt-3">
        <div class="card-header">
            <span>Users in this role</span>
        </div>
        <div class="card-body">
            @if(!Model.Users.Any())
            {
                <h2>None at the moment</h2>
            }
            else
            {
                foreach(var user in Model.Users)
                {
                    <h3>Display user here</h3>
                }
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" asp-controller="Administration" asp-action="EditUserInRole" asp-route-roleId="@Model.RoleId">Add or remove users</a>
            <a class="btn btn-danger">Cancel</a>

        </div>
    </div>

</form>