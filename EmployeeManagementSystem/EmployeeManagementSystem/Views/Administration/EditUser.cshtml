@model EditUserViewModel

@{
    ViewData["Title"] = "Edit User page";
}


<h1>Edit User</h1>

<form class="mt-1" method="post" enctype="multipart/form-data">
    <div class="row">
        <label asp-for="Id"></label>
        <div>
            <input disabled asp-for="Id" />
        </div>
    </div>
    <div class="row">
        <label asp-for="Email"></label>
        <div>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="row">
        <label asp-for="UserName"></label>
        <div>
            <input asp-for="UserName" />
            <span asp-validation-for="UserName"></span>
        </div>
    </div>

    <div class="mt-1">
        <button class="btn btn-primary" type="submit">Update</button>
        <a asp-controller="Administration" asp-action="ListUsers" class="btn btn-primary">Cancel</a>
    </div>


    <div class="card mt-1">
        <div class="card-header">
            <p>User Roles</p>
        </div>
        <div class="card-body">
            @if (!Model.UserRoles.Any())
            {
                <h3>None at the moment</h3>
            }
            else
            {


                for (int i = 0; i < Model.UserRoles.Count; i++)
                {
                    <input hidden asp-for="@Model.UserRoles[i]" />
                    <h3>@Model.UserRoles[i]</h3>
                }

            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" asp-controller="administration" asp-action="ManageRoles" asp-route-Id="@Model.Id">Manage Roles</a>
        </div>
    </div>

    <div class="card mt-1">
        <div class="card-header">
            <p>User Claims</p>
        </div>
        <div class="card-body">
            @if (!Model.UserClaims.Any())
            {
                <h3>None at the moment</h3>
            }
            else
            {


                for (int i = 0; i < Model.UserClaims.Count; i++)
                {
                    <input hidden asp-for="@Model.UserClaims[i]" />
                    <h3>@Model.UserClaims[i]</h3>
                }

              

            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" asp-action="ManageClaims" asp-controller="Administration" asp-route-Id="@Model.Id">Manage Claims</a>
        </div>
    </div>

</form>